{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/globals.css -o app/styles/globals.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev:css": "tailwindcss -w -i ./styles/globals.css -o app/styles/globals.css",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "typecheck": "tsc -b",
    "lint": "eslint . --ext .ts,.tsx",
    "format-check": "prettier --check --ignore-path .gitignore ."
  },
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "@remix-run/cloudflare": "^1.8.2",
    "@remix-run/cloudflare-pages": "^1.8.2",
    "@remix-run/react": "^1.8.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "isbot": "^3.6.5",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-social-icons": "^5.15.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.8.2",
    "@remix-run/eslint-config": "^1.8.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "wrangler": "^2.2.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
